.container-fluid
  .row-fluid
    .span4.well
      %h3
        = @body_part.region
      %h4
        = @body_part.name
      .span4
        = link_to("All Body Parts", body_parts_path)
      - if can? :update, @body_part
        .span2
          = link_to("Edit", edit_body_part_path(@body_part), :class => "btn btn-primary")
    .span6.well
      = image_tag @body_part.image_url(:thumb)
