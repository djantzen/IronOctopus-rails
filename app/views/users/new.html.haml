.container
  %h2 Sign Up
  #new-user-form
    = form_for @user do |form|
      - if @user.errors.any?
        .error_messages
          %h2 Form is invalid
          %ul
            - for message in @user.errors.full_messages
              %li= message
      .field
        = form.label :first_name
        = form.text_field :first_name, :class => 'required'
      .field.required
        = form.label :last_name
        = form.text_field :last_name, :class => 'required'
      .field.required
        = form.label :login
        = form.text_field :login, :class => 'required is_login_acceptable is_login_unique'
      .field.required
        = form.label :email
        = form.text_field :email, :class => 'required is_email_acceptable'
      .field.required
        = form.label :city
        = text_field_tag :city, "", :id => 'city-select', :class => 'ui-autocomplete-input'
      .field.required
        = form.label :password
        = form.password_field :password, :class => 'required is_password_acceptable'
      .field.required
        = form.label :password_confirmation
        = form.password_field :password_confirmation, :class => 'required is_password_acceptable'
      .actions
        = form.submit "Sign Up", :class => 'btn btn-primary btn-large'
