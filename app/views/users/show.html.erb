<div class="container">

  <div class="row">

    <div id="basic-user-info" class="span3">
      <div class="row well">
        <div class="span3">
          <h3>
            <%= @client.first_name %> <%= @client.last_name %>
          </h3>
        </div>
      </div>
      <%= form_for @client do |form| %>
        <div class="row well">
          <%= form.select :time_zone,
                          UsersController::TIME_ZONES.map { |time_zone| [time_zone, time_zone] },
                          :selected => @client.time_zone %>
          <br/>
          <h2>
            <%= Time.current %>
          </h2>
          Birthdate, contact info
        </div>
        <div class="row">
          <div class="span3 btn-group">
            <%= submit_tag "Save", :class => "btn btn-large btn-primary"%>
            <%= link_to "Cancel", user_path(@client), :class => "btn btn-large" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="span3">
      <h3 class="well">Programs</h3>
      <% if @client.trainers.include?(current_user) || @client.eql?(current_user) %>
        <%= link_to "Create new program for #{@client.first_name}", new_user_program_path(@client), :class => "btn btn-primary" %>
      <% end %>
      <ul class="nav nav-tabs nav-stacked">
        <% @client.programs.each do |program| %>
          <li>
            <%= link_to(program.name, edit_user_program_path(@client, program)) %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="span3">
      <h3 class="well">Routines</h3>
      <% if @client.trainers.include?(current_user) || @client.eql?(current_user) %>
        <%= link_to "Create new routine for #{@client.first_name}", new_user_routine_path(@client), :class => "btn btn-primary" %>
        <% end %>
      <ul class="nav nav-tabs nav-stacked">
        <% @routines.each do |routine| %>
          <li>
            <%= link_to(routine.name, edit_user_routine_path(@client, routine)) %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="span3">
      <h3 class="well">Todays Routines</h3>
      <ul class="nav nav-tabs nav-stacked">
        <% @todays_routines.each do |routine| %>
          <li>
            <%= link_to(routine.name, perform_routine_path(routine.client, routine)) %>
          </li>
        <% end %>
      </ul>

      <h3 class="well">Performance</h3>
      <ul class="nav nav-tabs nav-stacked">
        <li>
          <%= link_to "Work Log", user_work_index_path(@client) %>
        </li>
      </ul>


    </div>

  </div>


</div>