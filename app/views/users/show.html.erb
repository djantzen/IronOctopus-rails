<div class="container">

  <div class="row">

    <div id="basic-user-info" class="span3">
      <div class="row well">
        <div class="span3">
          <h3>
            <%= @user.first_name %> <%= @user.last_name %>
          </h3>
        </div>
      </div>
      <div class="row well">
        Birthdate, contact info
      </div>
    </div>

    <div class="span3">
      <h3 class="well">Programs</h3>
      <%= link_to_if (@user.trainers.include?(current_user) || @user.eql?(current_user)), "Create new program for #{@user.first_name}",
                     new_user_program_path(@user), :class => "btn btn-primary" %>
      <ul class="nav nav-tabs nav-stacked">
        <% @user.programs.each do |program| %>
          <li>
            <%= link_to(program.name, edit_user_program_path(@user, program)) %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="span3">
      <h3 class="well">Routines</h3>
      <%= link_to_if (@user.trainers.include?(current_user) || @user.eql?(current_user)), "Create new routine for #{@user.first_name}",
                     new_user_routine_path(@user), :class => "btn btn-primary" %>
      <ul class="nav nav-tabs nav-stacked">
        <% @routines.each do |routine| %>
          <li>
            <%= link_to(routine.name, edit_user_routine_path(@user, routine)) %>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="span3">
      <h3 class="well">Performance</h3>
      <%= link_to_if (@user.trainers.include?(current_user) || @user.eql?(current_user)), "Record Work for #{@user.first_name}",
                     new_user_work_path(@user), :class => "btn btn-primary" %>
      <ul class="nav nav-tabs nav-stacked">
        <li>
          <%= link_to "Work Log", user_work_index_path(@user) %>
        </li>
      </ul>
    </div>

  </div>


</div>