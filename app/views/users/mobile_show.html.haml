.container-fluid#mobile-user-show
  - if @user.is_trainer?
    .row
      .span3.well
        %h3
          My Clients
        - @user.clients.order(:first_name, :last_name).each do |client|
          .client-record
            = link_to(client.full_name, user_path(client), :class => 'btn btn-primary')
  .row
    .span3.well
      %h3
        Today's Routines
      - @todays_routines.each do |routine|
        %div
          = link_to(perform_routine_path(routine.client, routine), :class => 'btn btn-primary') do
            Perform
            %i= routine.name
  .row
    .span3.well
      %h3
        All Routines
      - @routines.each do |routine|
        %div
          = link_to(perform_routine_path(routine.client, routine), :class => 'btn btn-primary') do
            Perform
            %i= routine.name
