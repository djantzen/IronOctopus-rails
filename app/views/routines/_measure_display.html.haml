- if measure_value.defined?
  .row
    .span3
      #{measure}
    .span1.value-field
      = measure_value.min
    - if measure_value.range?
      .span2
        %span.measure-max
          %span.range-separator
            to
          %span.value-field
            = measure_value.max
    - if defined? unit and !measure.eql? 'Duration'
      %span.value-field
        = unit
