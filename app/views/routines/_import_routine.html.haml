#import-routine-form.modal
  .modal-header
    %h3 Select a routine to import
  .modal-body
    .row
      .span3#client-for-routines-dropdown-container
        = select_tag "client-for-routines-dropdown", options_for_select(@client_logins)
      .span3#routines-for-client-dropdown-container
        = select_tag "routines-for-client-dropdown"
    .row
      .span2
        .btn-group
          %button#cancel-routine-import-button.btn{"data-dismiss" => "modal", :type => "button"} Cancel
          = render :partial => "shared/button", :locals => { :button_class => "btn-primary",
                                                             :message => "Import", :button_id => "import-routine-submit-button" }
  .modal-footer
