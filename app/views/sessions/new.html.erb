<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <div class="notice"/>
  <div class="field">
    <%= label_tag :login %>
    <%= text_field_tag :login, params[:login] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %> 
  </div>

  <div class="actions"><%= submit_tag "Log in" %></div>

<% end %>

<%= link_to("Create a new account", :controller => :users, :action => :new) %>