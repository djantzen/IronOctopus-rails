<%= form_tag sessions_path do %>
  <div class="notice"></div>
  <div class="field">
    <%= label_tag :login %>
    <%= text_field_tag :login, params[:login] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in", :class => "btn btn-primary" %></div>
<% end %>